<Page class="page"
    navigatingTo="onNavigatingTo"  
    xmlns="http://www.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="NativeScript Dev Experts"></Label>
    </ActionBar>

    <ListView items="{{ masterData }}" itemTapped="onItemTap">
        <ListView.itemTemplate>
            <FlexboxLayout height="120" flexDirection="row">
                <Image height="100"
                    src="{{ imageUrl }}" />
                <FlexboxLayout flexDirection="column">
                    <Label text="{{ name }}" />
                    <Label text="{{ description }}" />
                </FlexboxLayout>
            </FlexboxLayout>
        </ListView.itemTemplate>
    </ListView>

    <GridLayout>
    </GridLayout>
</Page>
