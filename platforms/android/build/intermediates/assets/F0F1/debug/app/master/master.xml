<Page class="page"
    navigatingTo="onNavigatingTo"  
    xmlns:IC="nativescript-image-cache"
    xmlns="http://www.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="NativeScript Dev Experts"></Label>
    </ActionBar>
    <ListView items="{{ masterData }}" itemTap="onItemTap">
        <ListView.itemTemplate>
            <FlexboxLayout padding="10" height="120">
                <IC:NSImage id="{{ id + 'image' }}"
                    height="80" width="80"
                    src="{{ imageUrl }}">
                </IC:NSImage> 
                <FlexboxLayout marginLeft="10" flexDirection="column">
                    <Label id="{{ id + 'name' }}"
                        text="{{ name }}" />
                    <Label id="{{ id + 'description' }}"
                        textWrap="true" text="{{ description }}" />
                </FlexboxLayout>
            </FlexboxLayout>
        </ListView.itemTemplate>
    </ListView>
</Page>
